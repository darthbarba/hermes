<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Lista de Clientes</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #eff6ff;
      padding: 2rem;
    }
    .table-primary {
      background-color: #bfdbfe !important;
      color: #1e40af !important;
    }
    .btn-group > .btn {
      margin-right: 0.5rem;
    }
    .btn-group > .btn:last-child {
      margin-right: 0;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg bg-white shadow-sm px-4 py-3 mb-4 rounded-3">
    <a class="navbar-brand d-flex align-items-center" href="#">
      <img src="/logo.png.jpg" alt="Logo" width="40" height="40" class="me-2" />
      Hermes
    </a>
    <ul class="navbar-nav ms-auto d-flex flex-row gap-3">
      <li class="nav-item"><a class="nav-link" href="#">Pedidos</a></li>
      <li class="nav-item"><a class="nav-link" href="#">Historial</a></li>
      <li class="nav-item"><a class="nav-link active fw-bold text-decoration-underline" href="#">Clientes</a></li>
    </ul>
  </nav>

  <main class="container">
    <h2 class="mb-4 text-primary">Lista de Clientes</h2>

    <div class="mb-3">
      <a href="/clientes/nuevo" class="btn btn-success rounded-pill">Nuevo Cliente</a>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-hover bg-white shadow-sm rounded-3">
        <thead class="table-primary">
          <tr>
            <th>Nombre</th>
            <th>DNI</th>
            <th>Instagram</th>
            <th>Teléfono</th>
            <th>Acción</th>
          </tr>
        </thead>
        <tbody>
          <% if (clientes.length === 0) { %>
            <tr><td colspan="5" class="text-center">No hay clientes registrados</td></tr>
          <% } %>
          <% clientes.forEach(cliente => { %>
            <tr>
              <td><%= cliente.nombre %></td>
              <td><%= cliente.dni %></td>
              <td><%= cliente.instagram %></td>
              <td><%= cliente.telefono %></td>
              <td>
                <div class="btn-group" role="group">
                  <a href="/clientes/<%= cliente.id_cliente %>" class="btn btn-outline-primary btn-sm">Ver detalle</a>
                  <a href="/clientes/<%= cliente.id_cliente %>/editar" class="btn btn-outline-warning btn-sm">Editar</a>
                  <form action="/api/clientes/<%= cliente.id_cliente %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Borrar</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
