<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= pedido ? 'Editar Pedido' : 'Nuevo Pedido' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <%- include('partials/navbar') %>

  <main class="container my-4">
    <h2 class="mb-4 text-primary fw-bold"><%= pedido ? 'Editar Pedido' : 'Nuevo Pedido' %></h2>
    <form method="POST" action="<%= pedido ? `/pedidos/${pedido.id_pedido}?_method=PUT` : '/pedidos' %>">
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Cliente</label>
          <select name="id_cliente" class="form-select" required>
            <% clientes.forEach(c => { %>
              <option value="<%= c.id_cliente %>" <%= pedido && pedido.id_cliente === c.id_cliente ? 'selected' : '' %>><%= c.nombre %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-6">
          <label class="form-label">Servicio</label>
          <select name="id_servicio" class="form-select" required>
            <% servicios.forEach(s => { %>
              <option value="<%= s.id_servicio %>" <%= pedido && pedido.id_servicio === s.id_servicio ? 'selected' : '' %>><%= s.nombre %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-6">
          <label class="form-label">Costo</label>
          <input type="number" name="costo_servicio" class="form-control" value="<%= pedido?.costo_servicio || '' %>" required>
        </div>

        <div class="col-md-6">
          <label class="form-label">¿Lleva dinero?</label>
          <select name="lleva_dinero" class="form-select">
            <option value="0" <%= pedido?.lleva_dinero == 0 ? 'selected' : '' %>>No</option>
            <option value="1" <%= pedido?.lleva_dinero == 1 ? 'selected' : '' %>>Sí</option>
          </select>
        </div>

        <div class="col-md-6">
          <label class="form-label">Monto de dinero</label>
          <input type="number" name="monto_dinero_llevado" class="form-control" value="<%= pedido?.monto_dinero_llevado || '' %>">
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary"><%= pedido ? 'Actualizar Pedido' : 'Guardar Pedido' %></button>
        </div>
      </div>
    </form>
  </main>
</body>
</html>
